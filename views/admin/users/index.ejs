<%- include('../../partials/header.ejs') %> 
<body>
  <%- include('../../partials/navbar-admin.ejs') %> 
  <div class="container">
    <br>
    <br>
    <div style="display: flex; justify-content: space-between;">
      <h2>Categorias</h2> 
      <a style="height: 40px;" class="btn btn-primary" href="/admin/users/create">✚ Novo usuário</a>
    </div>
    <hr>
    <br>
    <table class="table table-bordered table-hover">
      <caption>Total de usuários cadastrados: <%= users.length %></caption> 
      <thead class="table-success">
        <tr>
          <th>#ID</th>
          <th>email</th>
        </tr>
      </thead>
      <tbody class="table-light">
        <% users.forEach(user => { %>
          <tr>
            <th><%= user.id %> </th>
            <th><%= user.email %> </th>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
<%- include('../../partials/footer.ejs') %> 